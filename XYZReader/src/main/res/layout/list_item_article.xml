<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_common_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/article_title"
            style="@style/CommonTextWhiteLarge"
            android:background="@color/theme_primary_darker_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cardview_title_padding_left"
            android:paddingTop="@dimen/cardview_title_padding_top"
            android:paddingRight="@dimen/cardview_title_padding_right"
            android:paddingBottom="@dimen/cardview_title_padding_bottom"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/CommonTextWhite"
            android:background="@color/theme_primary_darker_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cardview_text_common_padding"
            android:paddingRight="@dimen/cardview_text_common_padding"
            android:paddingBottom="@dimen/cardview_text_common_padding"
            android:ellipsize="end"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
